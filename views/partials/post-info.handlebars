<article class="post p-8 border-4 border-transparent rounded-3xl">
  <div class="title flex items-center justify-between">
    <a href="/post/{{id}}">
        <h3 class="text-3xl font-bold">{{title}}</h3>
    </a>
    <h4>{{user.username}} {{format_date created_at}}</h4>
  </div>

  <div class="post-content">
    <h5 class="text-blue-400 hover:text-blue-700 transition duration-300 ease-in-out mb-4">
        <div class="post-url">
          <a href="{{post_url}}">{{user.username}}'s highlights here!</a>
        </div>
      </h5>

      <p class="post-text text-base mb-4">
        {{post_text}}
      </p>
  </div>

  <div>
    <a href="/post/{{id}}">{{comments.length}}
        {{format_plural "comment" comments.length}}</a>
  </div>
</article>
